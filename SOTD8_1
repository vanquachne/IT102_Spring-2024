    <button onClick="startGame()">Start Game</button>

    <script>

        function startGame(){
            alert("Game started");
            myDeck = new Deck();
            myDeck.createDeck();
            alert(myDeck.cards[0].suit);
        }
        
        function Card(suit, rank) {
            //properties
            this.suit = suit;
            this.rank = rank;
            this.isVisible = false; //default: false
            //methods
            this.show = function () {
                this.isVisible = true;
            }
            this.hide = function () {
                this.isVisible = false;
            }

        }

        //Deck Constructor Object
        function Deck(){
            //properties
            this.cards = [];
            //methods
            //Create Deck methods
            this.createDeck = function(){
                suits = ["Hearts", "Diamonds", "Clubs", "Spades"];
                ranks = [2, 3, 4, 5, 6, 7, 8, 9, 10, "Jack", "Queen", "King", "Ace"];
                for(s = 0; s < 4 ;s++){
                    for(r = 0; r < 13; r++){
                        this.cards.push(new Card(suits[s], ranks[r]));
                    }
                }
            }//end deck method

            //Shuffle method
            this.shuffle = function(){
                for(i = 0; i < 52; i++){
                    var randomIndex = Math.floor(Math.random() * 52);
                    //Swap the cards
                    var temp = this.cards[i]; //store card value at index i
                    this.cards[i] = this.cards[randomIndex]; //card value at index i is now card value at randomIndex
                    this.card[randomIndex] = temp; //card value at randomIndex is now card value at index i
                    
                }
            }
            
        }

    </script>







